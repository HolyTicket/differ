                                        </th>
                                        <th colspan="2">
                                           Column: {{ $column_name }}
                                        </th>
                                    </tr>
                                    @if(isset($column_change['general_changes']))
                                        @foreach($column_change['general_changes'] as $general_change)
                                            <tr>
                                                <td width="150">

                                                </td>
                                                <td>
                                                    @if($general_change['type'] == 'column_added')
                                                        <i class="fa fa-plus"></i> Column <i>{{ $column_name }}</i> <span class="label label-success">added</span>
                                                    @elseif($general_change['type'] == 'column_removed')
                                                        <i class="fa fa-trash-o"></i> Column <i>{{ $column_name }}</i> <span class="label label-danger">removed</span>
                                                    @endif
                                                </td>
                                                <td align="right">
                                                    @include('elements.diff.sql', ['sql' => $general_change['sql']])
                                                </td>
                                            </tr>
                                        @endforeach
                                    @endif
                                    @if(isset($column_change['attribute_changes']))
                                        @foreach($column_change['attribute_changes'] as $attribute_change)
                                            <tr>
                                                <td width="150">

                                                </td>
                                                <td>
                                                    @if($attribute_change['type'] == 'column_altered')
