                                            @elseif($general_change['type'] == 'table_removed')
                                                <i class="fa fa-trash-o"></i> Table <i>{{ $table_name }}</i> <span class="label label-danger">removed</span>
                                            @endif
                                        </td>
                                        <td align="right">
                                            @include('elements.diff.sql', ['sql' => $general_change['sql']])
                                        </td>
                                    </tr>
                                @endforeach
                            @endif
                            @if(isset($change['column_changes']))
                                @foreach($change['column_changes'] as $column_name => $column_change)
                                    <tr>
